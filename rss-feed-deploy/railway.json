{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "static"
  },
  "routes": [
    {
      "src": "/feed.xml",
      "dest": "/public/feed.xml",
      "headers": {
        "Content-Type": "application/xml; charset=utf-8",
        "Cache-Control": "public, max-age=300"
      }
    },
    {
      "src": "/",
      "dest": "/public/feed.xml",
      "headers": {
        "Content-Type": "application/xml; charset=utf-8"
      }
    }
  ]
} 