# localhost環境設定
NODE_ENV=development

# データベース設定（SQLite）
# SQLiteファイルは自動的に作成されます

# 認証設定
JWT_SECRET="your-super-secret-jwt-key-here"
NEXTAUTH_SECRET=your_nextauth_secret
NEXTAUTH_URL=http://localhost:3000

# アプリケーションURL設定
NEXT_PUBLIC_APP_URL=http://localhost:3000

# RSS Feed設定
LOCALHOST_RSS_ENABLED=true
GITHUB_PAGES_URL=https://your-username.github.io/your-repo-name

# OpenAI API設定
OPENAI_API_KEY="your-openai-api-key"

# Browserless.io設定（localhostでは使用しない）
# BROWSERLESS_API_KEY="your-browserless-api-key"

# YouTube Data API設定
YOUTUBE_API_KEY=your_youtube_api_key

# その他の設定
NODE_ENV=development

# Encryption Master Key (32+ characters recommended)
ENCRYPTION_MASTER_KEY="your-super-secure-encryption-master-key-32-chars-min"

# YouTube Data API
YOUTUBE_CLIENT_ID="your-youtube-client-id"
YOUTUBE_CLIENT_SECRET="your-youtube-client-secret"

# Spotify API
SPOTIFY_CLIENT_ID="your-spotify-client-id"
SPOTIFY_CLIENT_SECRET="your-spotify-client-secret"

NEXT_PUBLIC_OPENAI_API_KEY=sk-xxxxxxx

# Voicy自動化用設定
API_BASE_URL=http://localhost:3000
API_TOKEN=your_api_token_here

# Voicy認証情報（暗号化して保存されるため、ここでは設定不要）
# VOICY_EMAIL=your_voicy_email
# VOICY_PASSWORD=your_voicy_password 

# Playwright設定（localhost用）
PLAYWRIGHT_BROWSERS_PATH=0
PLAYWRIGHT_SKIP_BROWSER_DOWNLOAD=false
NODE_OPTIONS=--max-old-space-size=512 